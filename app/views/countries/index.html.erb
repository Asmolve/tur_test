<% def edit_country(country) %>
  <%= render 'form', country: country %>
<% end %>

<table class="table table-striped table-hover">
  <thead class="table-info">
  <tr>
    <th>Country ID</th>
    <th>Country name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody style="background-color: rgba(255,184,234,0.23)">
  <% @countries.each do |country| %>
    <tr class="align-middle">
      <td><%= country.id %></td>
      <td><%= country.country_name %></td>
      <td><%= link_to '', edit_country(country) %></td>
      <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>


<button class="btn btn-dark" onclick="$('#newCountryForm').show()">
  Add a new country
</button>
<br/>
<br/>

<div id="newCountryForm" style="display: none">
  <% @country = Country.new %>
  <%= render 'form', country: @country %>
</div>

